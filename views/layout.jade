doctype html
html(lang="en" ng-app="nodos-app")
  head
    title Nodos
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/nv.d3.min.css')

    script(src='/js/jquery-1.11.1.min.js')
    script(src='/js/angular.min.js')
    script(src='/js/functions.js')
    script(src='/js/ui-bootstrap-tpls-0.11.0.min.js')
    script(src='/js/controllers/app.js')
    script(src='/js/controllers/index.js')
    script(src='/js/controllers/details.js')

    script(src='/js/d3.min.js')
    script(src='/js/nv.d3.min.js')
