  body
    header
      div(class="container")
        div(class="row")
          div(class="col-sm-offset-1 col-sm-5 col-xs-offset-1 col-xs-5")
            a(href="/")
              span(class="glyphicon glyphicon-tasks")
              span Nodos
          div(class="col-sm-offset-2 col-sm-2 col-xs-offset-2 col-xs-2")
            a(href="/details")
              span Details


    div(class="content")
      block content